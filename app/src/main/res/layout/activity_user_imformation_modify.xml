<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_light_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:text="회원 정보 수정"
            android:gravity="center"
            android:layout_marginStart="50dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#8e8e8e" />

    </LinearLayout>


    <ImageButton
        android:layout_width="174dp"
        android:layout_height="178dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@color/cardview_light_background"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_account_box_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 사진"
            android:textColor="@color/blue"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/ic_edit_24" />


    </LinearLayout>



    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/card_border_2"
        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="[ 아이디 ] : pangtaek00"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="#8e8e8e"
            android:gravity="center"
            android:textSize="17dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/card_border_2"
        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="[ 패스워드 ] : *******"
            android:layout_gravity="center"
            android:textColor="#8e8e8e"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="17dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:background="@drawable/card_border_2"
        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="[ 주소 ] : 대전 서구 관저동 158"
            android:layout_gravity="center"
            android:textColor="#8e8e8e"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:background="@drawable/card_border_2"
        >

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="[ 소속 ] : 건양대학교"
            android:layout_gravity="center"
            android:textColor="#8e8e8e"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17dp" />

        <android.widget.Button
            android:id="@+id/btn_info_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="변경"
            android:textSize="12dp"
            android:background="@drawable/card_border_5"/>

    </LinearLayout>


</LinearLayout>